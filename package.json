    "@types/node": "7.0.12",
    "americano": "0.4.5",
    "sqlite3": "3.1.8",
    "typescript": "2.2.2"
  },
  "scripts": {
    "watch:server": "tsc -p server -w",
    "watch:client": "cd client && ng serve --open",
    "build:server": "tsc -p server",
    "build:client": "cd client && ng build --prod --bh ./ -op ../build/client",
    "build": "npm run build:server && npm run build:client",
    "resetdb": "cd db && ./resetdb.sh"
  }
