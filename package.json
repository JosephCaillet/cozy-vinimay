  "dependencies": {
    "@types/hapi": "16.0.3",
    "@types/joi": "^10.3.0",
    "@types/node": "7.0.12",
    "@types/sequelize": "4.0.51",
    "hapi": "16.1.1",
    "hapi-swagger": "7.7.0",
    "hapi-swagger-json": "1.1.1",
    "inert": "4.2.0",
    "joi": "^10.4.1",
    "printit": "0.1.20",
    "sequelize": "3.30.4",
    "sqlite3": "3.1.8",
    "typescript": "2.2.2",
    "vision": "4.1.1"
  },
  "scripts": {
    "start": "node build/server/index.js",
    "watch:server": "tsc -p server -w",
    "watch:client": "cd client && ng serve --open",
    "build:server": "tsc -p server",
    "build:client": "cd client && ng build --prod --bh ./ -op ../build/client",
    "build": "npm run build:server && npm run build:client",
    "resetdb": "cd db && ./resetdb.sh"
  }
}
